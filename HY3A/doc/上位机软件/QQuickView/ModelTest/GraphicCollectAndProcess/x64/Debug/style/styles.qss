QScrollBar::down-arrow:vertical 
{
    border-image: url(:/GraphicCollectAndProcess/image/scroll_down.png);
	border-color: rgba(150, 150, 150, 200);
	border:1px;
}

QScrollBar::up-arrow:vertical 
{
    border-image: url(:/GraphicCollectAndProcess/image/scroll_up.png);
	border-color: rgba(150, 150, 150, 200);
	border:1px;
}

QScrollBar::left-arrow:horizontal 
{
    border-image: url(:/GraphicCollectAndProcess/image/scroll_left.png);
	border-color: rgba(150, 150, 150, 200);
	border:1px;
}

QScrollBar::right-arrow:horizontal 
{
    border-image: url(:/GraphicCollectAndProcess/image/scroll_right.png);
	border-color: rgba(150, 150, 150, 200);
	border:1px;
}

QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal 
{
     background: none;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical 
{
     background: none;
}

QScrollBar::horizontal 
{
    background-color: rgba(13, 24, 40, 255);
	height:18px;
	padding-left:18px;
	padding-right:18px;
}

QScrollBar::handle:horizontal 
{
	background-color:rgba(45, 84, 138, 200); 
	border:2px solid transparent;
	border-radius:5px;
	min-width:18px;
}

QScrollBar::vertical 
{
    background-color: rgba(13, 24, 40, 255);
	width:18px;
	padding-top:18px;
	padding-bottom:18px;
}

QScrollBar::handle:vertical 
{
    background-color:rgba(45, 84, 138, 200); 
	border:2px solid transparent;
	border-radius:5px;
	min-height:18px;
}