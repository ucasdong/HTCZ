{
    color:white;
    background-color: rgba(45, 84, 138, 200);
    border-color: rgba(45, 84, 138, 200);
	border-radius: 1px;
}

QToolButton:hover
{
	border-radius:4px;
	background-color: rgba(48, 68, 88, 255);
	border: 1px solid QColor(200, 200, 200); 
	background-color: transparent
}
	
QComboBox 
{
	color:white;
    border: 1px solid gray;
    border-radius: 1px;
    padding: 1px 0px 1px 0px;
	background-color:#304458;
}

QComboBox::drop-down 
{
    subcontrol-origin: padding;
    subcontrol-position: top right;
 
    border-left-width: 1px;
    border-left-color: darkgray;
    border-left-style: solid; /* just a single line */
    border-top-right-radius: 3px; /* same radius as the QComboBox */
    border-bottom-right-radius: 3px;
}

QComboBox QAbstractItemView 
{
    color:rgba(220, 220, 220, 200);
    background-color:#304458;
	selection-background-color: #1DB0E0;
}

QComboBox::down-arrow 
{
    image: url(:/GraphicCollectAndProcess/image/down-a.png);
}

